/**
* Theme layout and styles
*/
// fonts {{{
@font-face
	font-family: "Montserrat"
	font-weight: 800
	font-style: normal
	src: url("fonts/Montserrat-ExtraBold.woff2") format("woff2"),
	     url("fonts/Montserrat-ExtraBold.woff") format("woff");
@font-face
	font-family: "Kazmann"
	font-weight: 400
	font-style: normal
	src: url("fonts/Kazmann Sans.woff2") format("woff2"),
	     url("fonts/Kazmann Sans.woff") format("woff");
/***
@font-face
	font-family: 'TradeWinds'
	font-display: fallback
	src: local('Trade Winds'),
	     url('TradeWinds.woff2') format('woff2'),
	     url('TradeWinds.woff') format('woff'),
	     url('TradeWinds.ttf') format('truetype');
/***/
// }}}
// helpers {{{
cv(c)
	s('%s,%s,%s', red(c), green(c), blue(c));
rgba(cv,alpha=1)
	s('rgba(%s,%s)', cv, alpha);
// }}}
////
html, body
	width:   100%
	height:  100%
	margin:  0
	padding: 0
	border:  0
	scroll-behavior: smooth
body
	// configuration {{{
	// COLORS
	--sm-color-0: cv(black)
	--sm-color-1: cv(white)
	--sm-color-2: cv(silver)
	--sm-color-3: cv(gainsboro)
	--sm-color-4: cv(darkslategray)
	--sm-color-5: cv(slategray)
	--sm-color-6: cv(darkslateblue)
	--sm-color-7: cv(slateblue)
	// }}}
	// common {{{
	.inputbox // {{{
		display: flex;
		flex-direction: column;
		//overflow: hidden;
		width: 100%;
		padding-bottom: 4px;
		////
		> label
			order: 1;
			display: block;
			font-weight: bold;
			color: @color-layer-dark;
			white-space: nowrap;
		> input,
		> select,
		> textarea
			order: 2;
			display: block;
			width: 100%;
			height: 48px;
			box-sizing: border-box;
			margin: 0;
			padding: 10px 8px;
			border-width: 0;
			border-top: 1px solid @color-layer-dark;
			box-shadow: inset 0 1px 2px @color-layer-dark;
			border-radius: 2px;
			background-color: @color-layer;
			color: black;
			font-weight: bold;
			&:focus
				outline: none;
				border-color: rgba(var(--sm-color-6))
				box-shadow: inset 0 1px 1px rgba(var(--sm-color-7))
				~ label
					color: rgba(var(--sm-color-7));
			&:disabled
				background-color: transparent;
				border-style: none;
				border-bottom-style: solid;
				border-radius: 0;
			&::placeholder
				color: @color-layer-mid;
		> textarea
			height: auto;
		////
		&.readonly
			> input,
			> select,
			> textarea
				border-top: none;
				border-left: none;
				border-right: none;
				border-radius: 0;
				background-color: transparent;
				&:focus
					//box-shadow: none;
					box-shadow: inset 0 -4px 6px -6px hsl(210, 13%, 60%);
				&::placeholder
					color: transparent;
		&.hidden
			display: none;
		&.required
			> label:before
				color: red;
				content: '*';
	// }}}
	.checkbox // {{{
	{
		display: flex;
		align-items: center;
		overflow: hidden;
		width: 100%;
		padding: 8px 0;
		> input
		{
			display: block;
			width: 24px;
			height: 24px;
			box-sizing: border-box;
			margin: 0;
			cursor: pointer;
			&:checked ~ label
			{
				color: black;
			}
			&:focus
			{
				outline: none;
				~ label
				{
					color: hsl(240, 100%, 60%);
				}
			}
		}
		> label
		{
			font-size: 16px;
			font-weight: bold;
			padding-left: 8px;
			color: hsl(210, 13%, 50%);
			cursor: pointer;
			user-select: none;
			margin: 0;
		}
	}
	// }}}
	.cmdbox // {{{
	{
		display: flex;
		overflow: hidden;
		width: 100%;
		> button
		{
			width: 100%;
			height: 64px;
			box-sizing: border-box;
			margin: 0;
			padding: 8px;
			border: 1px solid @color-layer-dark;
			border-radius: 2px;
			background-color: black;
			background-position: center;
			color: white;
			font-size: 16px;
			font-weight: bold;
			cursor: pointer;
			outline: none;
			&:hover
			{
				//font-size: 18px;
				border-width: 2px;
				border-color: rgba(var(--sm-color-6))
			}
			&:focus
			{
				border-width: 3px;
				border-color: rgba(var(--sm-color-6))
			}
			&:active
			{
				color: rgba(var(--sm-color-6))
			}
			&:disabled
			{
				//background-color: hsl(210, 13%, 95%);
				//border-color: hsl(210, 13%, 60%);
				//color: hsl(210, 13%, 60%);
				cursor: default;
			}
			&.hidden {
				display: none;
			}
		}
		&.light
		{
			> button
			{
				background-color: @color-layer;
				border-color: @color-layer-dark;
				color: black;
				&:hover
				{
					//font-size: 18px;
					border-color: rgba(var(--sm-color-6));
				}
				&:focus
				{
					border-color: rgba(var(--sm-color-6));
				}
				&:active
				{
					color: rgba(var(--sm-color-6));
					background-color: rgba(var(--sm-color-6), 0.125);
				}
			}
		}
		/***
		&.ripple-effect > button:enabled
		{
			background-position: center;
			transition: background 0.5s;
			&:hover
			{
				background: hsl(240, 100%, 95%) radial-gradient(circle, transparent 1%, hsl(240, 100%, 95%) 1%) center/15000%;
			}
			&:active
			{
				background-color: hsl(210, 13%, 50%);
				background-size: 100%;
				transition: background 0s;
			}
		}
		/***/
	}
	// }}}
	.groupbox // {{{
	{
		padding: 6px 0 4px 0;
		> .checkbox
		{
			padding: 0 0 4px 0;
			> input
			{
			}
			> label
			{
			}
		}
	}
	// }}}
	.groupbar // {{{
	{
		display: flex;
		> .inputbox
		{
			flex: 1 1 0;
			&.w2 {flex: 2 2 0;}
			&.w3 {flex: 3 3 0;}
			&.w4 {flex: 4 4 0;}
			&.w5 {flex: 5 5 0;}
			&.w6 {flex: 6 6 0;}
			&.w7 {flex: 7 7 0;}
			&.w8 {flex: 8 8 0;}
			&.w9 {flex: 9 9 0;}
			////
			padding-left:  2px;
			padding-right: 2px;
			&:nth-child(1) {
				padding-left: 0;
			}
			&:nth-last-child(1) {
