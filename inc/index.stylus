	.storefront-primary-navigation > .col-full // {{{
		// используем флексбокс для позиционирования
		display: flex;
		min-height: 54px;
		// контейнер навигации
		> .main-navigation
		{
			flex: 1 1 100%;
			width: 100%;
			margin: 0;
			float: none;
			// кнопа для отображения/сокрытия портативной навигации
			// отображаем ее блоком, на всю ширину экрана
			> .menu-toggle {
				width: 100%;
				max-width: 100%;
				padding-top: 8px;
				padding-bottom: 8px;
				background-color: @color-layer;
				border-style: none;
				border-top: 1px solid rgba(var(--sm-color-6));
				//border-bottom: 1px solid rgba(var(--sm-color-6));
				//border-radius: 8px;
				outline: none;
				font-family: 'RistrettoPro';
				font-size: 1.8em;
				font-weight: normal;
				&:hover {
					background-color: rgba(var(--sm-color-6), 0.125);
					color: rgba(var(--sm-color-6));
					font-size: 1.82em;
				}
			}
			// включенное состояние кнопы
			&.toggled {
				> .menu-toggle {
					//border-bottom-style: none;
				}
			}
			// портативная навигация {{{
			> .handheld-navigation {
				width: 100%;
				border-bottom: 1px solid rgba(var(--sm-color-6));
				background-color: @color-layer;
				> .menu {
					padding: 4px 16px;
					li {
						> a
						{
							font-family: 'RistrettoPro';
							font-size: 1.6em;
							padding: 4px 0 4px 8px;
							outline: none;
							&:hover {
								background-color: rgba(var(--sm-color-6), 0.125);
								color: rgba(var(--sm-color-6));
								font-size: 1.65em;
							}
						}
						> button {
							background-color: @color-layer;
							border: 1px solid rgba(var(--sm-color-6));
							border-radius: 100%;
							outline: none;
							&:hover {
								background-color: rgba(var(--sm-color-6), 0.125);
								color: rgba(var(--sm-color-6));
							}
						}
					}
				}
			}
			// }}}
			// основная навигация {{{
			> .primary-navigation {
				height: 100%;
				> .menu {
					// не стандартный список
					flex: 1 1 auto;
					display: flex;
					list-style: none;
					margin: 0;
					height: 100%;
					box-sizing: border-box;
					// нестандартные ссылки
					a
					{
						display: flex;
						text-decoration: none;
						white-space: nowrap;
					}
					// контейнер корневого элемента
					> li
					{
						position: relative;
						display: flex;
						flex-direction: column;
						justify-content: flex-end;
						align-items: center;
						padding: 0 0 0 12px;
						// корневой элемент
						> a
						{
							flex: 1 1 100%;
							padding: 0 4px;
							color: black;
							//align-items: center;
							// наименование
							> div {
								display: flex;
								align-items: center;
								font-family: 'RistrettoPro';
								font-size: 1.6em;
								padding: 0;
							}
							// иконка выпадающего списка (скрыта по-умолчанию)
							> svg {
								width: 0;
								height: auto;
							}
							&::after {
								display: none;
							}
						}
						&.current-menu-item > a,
						&.current-menu-ancestor > a
						{
							> div
							{
								font-size: 2em;
								font-weight: bold;
							}
						}
						&.menu-item-has-children > a > svg {
							width: 20px;
						}
						// линия под элементом для анимации наведения и
						// индикации активного статуса выпадающего меню
						> hr
						{
							visibility: hidden;
							margin: 0;
							width: 100%;
							height: 5px;
							background-color: rgba(var(--sm-color-6));
						}
						&.current-menu-item > hr,
						&.current-menu-ancestor > hr
						{
							visibility: visible;
						}
						// выпадающее меню
						> .dropdown
						{
							position: absolute;
							left: -8px;
							top: calc(100% + 2px);
							width: 380px;
							padding: 8px 10px;
							background-color: @color-layer;
							border-radius: 4px;
							border: 1px solid rgba(var(--sm-color-6));
							visibility: hidden;
							opacity: 0;
							z-index: 100;
							// ссылка
							> a
							{
								display: flex;
								align-items: center;
								padding: 0 0 0 8px;
								background-color: transparent;
								border-radius: 2px;
								height: 2.4em;
								// отступ для элементов выше 1-ого уровня
								> svg
								{
									//display: block;
									padding: 0;
									height: 18px;
									//fill: white;
								}
								// текст
								> div
								{
									font-family: 'RistrettoPro';
									font-size: 1.6em;
									padding: 0;
									color: black;
								}
								// состояния:
								// наведен
								&:hover,
								&.hovered
								{
									background-color: rgba(var(--sm-color-6), 0.125);
									> div {
										color: rgba(var(--sm-color-6));
										font-size: 1.7em;
									}
								}
								// выбран
								&.current-menu-item
								{
									> div
									{
										letter-spacing: 0.05em;
										font-weight: bold;
										color: rgba(var(--sm-color-6));
									}
								}
							}
							// заголовок уровня
							> h3
							{
								font-family: 'RistrettoPro';
								font-size: 1.7em;
								font-weight: bold;
								color: black;
								margin: 0;
								padding: 0 0 0 8px;
							}
						}
					}
				}
			}
			// }}}
		}
		// корзина
		> .site-cart
		{
			flex: 0 1 auto;
			display: flex;
			align-items: center;
			padding-left: 8px;
			// ссылка
			> a {
				display: flex;
				align-items: center;
				//outline: none;
				// контейнер
